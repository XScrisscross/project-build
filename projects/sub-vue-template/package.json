{
  "name": "vue-build",
  "version": "0.1.0",
  "private": true,
  "description": "",
  "author": {
    "name": "XScrisscross",
    "email": "xscrisscross@outlook.com"
  },
  "keywords": [
    "vue",
    "vuex",
    "electron",
    "vue-cli"
  ],
  "scripts": {
    // 常规应用设置
    "serve:devp": "cross-env PROJECT_MODE=webapp vue-cli-service serve --mode devp",
    "build-all": "npm-run-all --serial build:*",
    "build:pack_test": "cross-env PROJECT_MODE=webapp vue-cli-service build --mode pack_test",
    "build:pack_prod": "cross-env PROJECT_MODE=webapp vue-cli-service build --mode pack_prod",
    // electron客户端设置
    "electron:devp": "cross-env PROJECT_MODE=electron vue-cli-service electron:serve --mode devp",
    "electron-build:pack_test": "cross-env PROJECT_MODE=electron vue-cli-service electron:build --mode pack_test",
    "electron-build:pack_prod": "cross-env PROJECT_MODE=electron vue-cli-service electron:build --mode pack_prod",
    "postinstall": "electron-builder install-app-deps",
    "postuninstall": "electron-builder install-app-deps",
    // 微应用-子应用设置
    "micro-serve:devp": "cross-env PROJECT_MODE=microapp vue-cli-service serve --mode devp",
    "micro-build:pack_prod": "cross-env PROJECT_MODE=microapp vue-cli-service build --mode pack_prod",
    "micro-build:pack_test": "cross-env PROJECT_MODE=microapp vue-cli-service build --mode pack_test",
    // 多应用设置
    "multi-serve": "npm-run-all --parallel multi-serve:*",
    "multi-serve:webappX": "cross-env PROJECT_MODE=webappX vue-cli-service serve --mode devp",
    "multi-serve:webappY": "cross-env PROJECT_MODE=webappY vue-cli-service serve --mode devp",
    "lint": "vue-cli-service lint",
    "test:unit": "vue-cli-service test:unit"
  },
  "dependencies": {
    "amfe-flexible": "^2.2.1",
    "ant-design-vue": "^1.7.5",
    "axios": "^0.21.1",
    "core-js": "^3.6.5",
    "element-ui": "^2.15.8",
    "html2canvas": "^1.4.1",
    "jspdf": "^2.5.1",
    "lodash": "^4.17.21",
    "moment": "^2.29.3",
    "normalize.css": "^8.0.1",
    "nprogress": "^0.2.0",
    "vue": "^2.6.11",
    "vue-ls": "^4.2.0",
    "vue-router": "^3.2.0",
    "vuedraggable": "^2.24.3",
    "vuescroll": "^4.17.3",
    "vuex": "^3.4.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.5",
    "@babel/preset-env": "^7.14.7",
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@vue/cli-plugin-babel": "~4.5.0",
    "@vue/cli-plugin-eslint": "~4.5.0",
    "@vue/cli-plugin-router": "~4.5.0",
    "@vue/cli-plugin-unit-jest": "~4.5.0",
    "@vue/cli-plugin-vuex": "~4.5.0",
    "@vue/cli-service": "~4.5.0",
    "@vue/eslint-config-prettier": "^6.0.0",
    "@vue/test-utils": "^1.0.3",
    "babel-eslint": "^10.1.0",
    "babel-plugin-import": "^1.13.3",
    "babel-plugin-lodash": "^3.3.4",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "babel-polyfill": "^6.26.0",
    "cross-env": "^7.0.3",
    "electron": "^13.0.0",
    "electron-devtools-installer": "^3.1.0",
    "eslint": "^6.8.0",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-vue": "^6.2.2",
    "husky": "^6.0.0",
    "less": "^4.1.1",
    "less-loader": "^10.0.0",
    "lint-staged": "^11.0.0",
    "node-sass": "^4.12.0",
    "npm-run-all": "^4.1.5",
    "postcss-px-to-viewport": "^1.1.1",
    "postcss-px2rem": "^0.3.0",
    "prettier": "^2.2.1",
    "prettier-eslint": "^12.0.0",
    "sass-loader": "^8.0.2",
    "spectron": "15.0.0",
    "vue-cli-plugin-electron-builder": "~2.1.1",
    "vue-template-compiler": "^2.6.11",
    "webpack": "^4.46.0",
    "webpackbar": "^5.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,json,vue,html}": [
      "prettier --write",
      "eslint --fix",
      "git add -n"
    ],
    "*.{css,sass,scss}": [
      "prettier --write",
      "git add -n"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/XScrisscross/project-build"
  }
}